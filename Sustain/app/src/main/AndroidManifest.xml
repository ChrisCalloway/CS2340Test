<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.project.sustain">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity android:name=".controllers.WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".controllers.LoginActivity"/>
        <activity android:name=".controllers.MainActivity"/>
        <activity android:name=".controllers.ViewReportsActivity"/>
        <activity android:name=".controllers.RegistrationActivity"/>
        <activity android:name=".controllers.WaterRptSubmitActivity"/>
        <activity android:name=".controllers.EditProfileActivity">
        </activity>
        <activity android:name=".controllers.ViewReportActivity"
            android:label="ViewingWaterReport" >
            <intent-filter>
                <action android:name="activityWaterReport" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>