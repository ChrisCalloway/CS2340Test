<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="14dp"
    tools:context="com.project.sustain.controllers.ChooseReportActivity">

    <RadioGroup
        android:id="@+id/radGrpReportListType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="194dp">

        <RadioButton
            android:id="@+id/radBtnReportListSourceReport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Water Source Report"/>

        <RadioButton
            android:id="@+id/radBtnReportListPurityReport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Water Purity Report"/>
    </RadioGroup>

    <TextView
        android:id="@+id/txtSelectReportType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/radGrpReportListType"
        android:layout_marginBottom="98dp"
        android:text="Select the report type to view:"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/btnSelectReportCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/radGrpReportListType"
        android:layout_marginStart="30dp"
        android:layout_marginTop="42dp"
        android:text="Cancel"/>

    <Button
        android:id="@+id/btnSelectReportOK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnSelectReportCancel"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="23dp"
        android:text="OK"/>

</RelativeLayout>
