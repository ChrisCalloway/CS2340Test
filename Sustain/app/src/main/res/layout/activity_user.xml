<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_user"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.project.sustain.UserActivity">

    <ImageView
        android:layout_width="301dp"
        android:layout_height="177dp"
        app:srcCompat="@drawable/sustain_svg"
        android:id="@+id/sustainIcon"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="25dp" />

    <TextView
        android:text="Add New User"
        android:layout_width="154dp"
        android:layout_height="41dp"
        android:id="@+id/userTitle"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_marginLeft="110dp" />

    <EditText
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/editUsernameOld"
        android:layout_height="55dp"
        android:hint="@string/edit_username"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_weight="0.12"
        android:layout_width="279dp" />

    <EditText
        android:layout_height="55dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editUserEmail"
        android:layout_row="3"
        android:layout_column="1"
        android:hint="@string/edit_email"
        android:layout_weight="0.12"
        android:layout_width="280dp" />

    <Button
        android:text="Add User"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:id="@+id/buttonAddUser"
        android:layout_marginLeft="100dp"
        style="@android:style/Widget.Button"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:layout_marginTop="10dp" />

    <Button
        android:text="Cancel"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:id="@+id/buttonCancelUser"
        android:layout_marginLeft="100dp"
        style="@android:style/Widget.Button"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp" />

</LinearLayout>