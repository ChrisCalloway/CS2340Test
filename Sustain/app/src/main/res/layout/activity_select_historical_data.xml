<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp">


    <TextView
        android:id="@+id/lblPageTitle"
        style="?android:listSeparatorTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60px"
        android:text="Select Data for Graph" />

    <TextView
        android:id="@+id/lblWaterLocation"
        style="?android:listSeparatorTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100px"
        android:text="Location" />

    <Spinner
        android:id="@+id/spinLocationName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10px" />

    <TextView
        android:id="@+id/lblDataType"
        style="?android:listSeparatorTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100px"
        android:text="Datatype to Search" />


    <RadioGroup
        android:id="@+id/radDataType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30px"
        android:layout_marginLeft="45px"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radbtnVirusOpt"
            android:layout_width="166dp"
            android:layout_height="wrap_content"
            android:text="Virus"/>

        <RadioButton
            android:id="@+id/radbtnContaminantOpt"
            android:layout_width="144dp"
            android:layout_height="wrap_content"
            android:text="Contaminant"/>
    </RadioGroup>

    <TextView
        android:id="@+id/lblYear"
        style="?android:listSeparatorTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100px"
        android:text="Year" />

    <Spinner
        android:id="@+id/spinYear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100px"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50px"
            android:text="Cancel" />

        <Button
            android:id="@+id/btnContinue"
            android:layout_width="300px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130px"
            android:text="Display Graph" />
    </LinearLayout>

</LinearLayout>
